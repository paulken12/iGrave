<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/fam_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block 9 " />

            <TextView
                android:id="@+id/fam_lot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#51" />


        </LinearLayout>

       <LinearLayout
           android:id="@+id/names"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/code"
           android:layout_marginLeft="5dp">


           <TextView
               android:id="@+id/fam_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Fname"
               android:textAllCaps="true"
               android:textSize="16sp"
               android:textStyle="bold" />


       </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_below="@+id/names">

            <TextView
                android:id="@+id/fam_deceased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Deceased : " />
            <TextView
                android:id="@+id/fam_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" #00" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/fam_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fam_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

